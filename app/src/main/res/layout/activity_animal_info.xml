<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.teamabstraction.livestockmanager.AnimalInfo">

    <RelativeLayout
        android:layout_width="389dp"
        android:layout_height="503dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="34dp">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="-1dp" />

        <TextView
            android:id="@+id/textViewBreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breed"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="53dp"
            android:layout_above="@+id/editTextBreed"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textViewGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="110dp"
            android:layout_above="@+id/editTextGender"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewName"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="-1dp" />

        <EditText
            android:id="@+id/editTextBreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="53dp"
            android:layout_marginBottom="28dp"
            android:layout_above="@+id/textViewGender"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editTextGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewNChildren"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="110dp" />

        <TextView
            android:id="@+id/textViewNChildren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Children"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="163dp"
            android:layout_above="@+id/editTextNChildren"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editTextNChildren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewProduct"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="163dp" />

        <TextView
            android:id="@+id/textViewProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTextProduct"
            android:layout_alignParentStart="true"
            android:text="Product"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="215dp" />

        <EditText
            android:id="@+id/editTextProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button_Add"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="62dp"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="215dp" />

        <Button
            android:id="@+id/button_Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="53dp"
            android:text="Add Data"
            tools:layout_editor_absoluteX="123dp"
            tools:layout_editor_absoluteY="265dp" />

